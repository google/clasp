{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "es5",
      "es6",
      "es2017"
    ],
    "strict": true,
    "inlineSourceMap": true,
  },
  "moduleResolution": "node",
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
