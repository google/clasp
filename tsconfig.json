{
    "compilerOptions": {
        "allowSyntheticDefaultImports": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2017"
        ],
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "outDir": "build",
        "pretty": true,
        "strict": true,
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "*.ts"
    ]
}
